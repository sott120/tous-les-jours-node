<main class="login">
    <div class="circle circle_animate"></div>
    <section class="login_title">
        <h2 class="login_h2">Log in</h2>
    </section>
    <form id="login">
        <section class="login_wrap">
        <div class="login_img">
            <img src="../img/circle_logo.png" alt="">
            <p>회원정보를 입력해주세요.</p>
        </div>
        <div class="login_box">
            <label for="loginId" class="log">아이디</label>
            <input type="text" class="login_id" name="login_id" id="loginId" placeholder="아이디를 입력하세요" maxlength="13">
            <p class="no"></p>
        </div>
        <div class="login_box">
            <label for="loginPw" class="log">비밀번호</label>
            <input type="password" class="login_pw" name="login_pw" id="loginPw" placeholder="비밀번호를 입력하세요" maxlength="20">
            <p class="no"></p>
        </div>
        <div class="login_d_box">
            <form>
                <input type="checkbox" id="loginSave" name="login_save" value="아이디 저장">
                <label for="logSave">아이디 저장</label><br>
            </form>
            <ul>
                <li>
                    <a href="/signup">
                        회원가입
                    </a>
                </li>
                <li>
                    <a href="">
                        아이디 찾기
                    </a>
                </li>
                <li>
                    <a href="">
                        비밀번호 찾기
                    </a>
                </li>
            </ul>
        </div>
        </section>
    </form>
    <button onclick="login()" class="login_wrap login_btn bor_none">로그인</button>
</main>
<script src="../js/login.js"></script>
<script src="../js/top_btn.js"></script>
